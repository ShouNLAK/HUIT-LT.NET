<Window x:Class="_38_NguyenLeAnhKhoa_Tuan02.BTM1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BTM1" Height="300" Width="600" Closing="Window_Closing" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#6C8EBF"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="209*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="572" Margin="10,10,0,0">
            <Label Content="Thông tin" HorizontalAlignment="Center" Margin="236,0" VerticalAlignment="Center" FontSize="20" Height="40" Width="100" FontWeight="Bold" Grid.Row="0"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="189" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="572" RenderTransformOrigin="0.5,0.5">
            <Border CornerRadius="12" BorderThickness="2" BorderBrush="#9DB5E4" Padding="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="#D6EAF8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="0,0,0,-22">
                    <WrapPanel HorizontalAlignment="Center" Height="20" Margin="127,97,134,50" VerticalAlignment="Center" Width="267">
                        <Button x:Name="btn_Show" Content="Hiển thị" Style="{StaticResource MainButton}" Click="btn_Show_Click"/>
                        <Button x:Name="btn_Delete" Content="Xóa" Style="{StaticResource MainButton}" Click="btn_Delete_Click"/>
                        <Button x:Name="btn_Exit" Content="Thoát" Style="{StaticResource MainButton}" Click="btn_Exit_Click"/>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Left" Height="26" Margin="40,16,0,0" VerticalAlignment="Top" Width="500">
                        <Label Content="Nhập họ tên :" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="0,0,18,0"/>
                        <TextBox x:Name="txt_hoTen" Style="{StaticResource InputBox}" LostFocus="txt_hoTen_LostFocus"/>
                        <TextBlock x:Name="txt_hoTen_Check" TextWrapping="Wrap" Width="231" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" FontSize="11" Foreground="Red"/>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Left" Height="26" Margin="40,58,0,0" VerticalAlignment="Top" Width="500" Grid.Row="1">
                        <Label Content="Năm sinh :" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="0,0,34,0"/>
                        <TextBox x:Name="txt_namSinh"  Style="{StaticResource InputBox}" LostFocus="txt_namSinh_LostFocus"/>
                        <TextBlock x:Name="txt_namSinh_Check" TextWrapping="Wrap" Width="228" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" FontSize="11" Foreground="Red"/>
                    </WrapPanel>
                    <TextBlock x:Name="txt_KQ" HorizontalAlignment="Left" Margin="100,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1" Height="16" Width="49"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
