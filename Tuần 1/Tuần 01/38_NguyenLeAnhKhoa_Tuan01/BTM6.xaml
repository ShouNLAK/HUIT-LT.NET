<Window x:Class="_38_NguyenLeAnhKhoa_Tuan01.BTM6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bài tập mẫu 6" Height="200" Width="350
        " Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="175"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <WrapPanel HorizontalAlignment="Left" Height="21" Grid.Row="2" VerticalAlignment="Top" Width="300" Grid.ColumnSpan="2" Margin="25,0,0,0">
            <Button x:Name="btn_Cong" Content="+" Width="75" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Click="btn_Cong_Click"/>
            <Button x:Name="btn_Tru" Content="-" Width="75" Click="btn_Tru_Click" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button x:Name="btn_Nhan" Content="*" Width="75" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Click="btn_Nhan_Click"/>
            <Button x:Name="btn_Chia" Content="/" Width="75" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Click="btn_Chia_Click"/>
        </WrapPanel>
        <Label Content="a :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox x:Name="txt_A" HorizontalAlignment="Left" Height="30" Margin="32,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" LostFocus="txt_A_LostFocus"/>
        <Label Content="b :" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox x:Name="txt_B" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="33,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124"/>
        <Label Content="Kết quả =" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="30" Width="63"/>
        <TextBlock x:Name="txt_ketQua" HorizontalAlignment="Center" Margin="73,10,18,10" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="30" Width="259" FontWeight="Bold" FontSize="20"/>


    </Grid>
</Window>
