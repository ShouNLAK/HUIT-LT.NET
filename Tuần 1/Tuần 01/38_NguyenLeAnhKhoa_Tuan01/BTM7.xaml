<Window x:Class="_38_NguyenLeAnhKhoa_Tuan01.BTM7"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bài tập mẫu 7" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Xử lý dãy số" HorizontalAlignment="Center" Margin="212,10,216,10" VerticalAlignment="Center" FontSize="24" Foreground="Red" FontWeight="Bold" Height="56" Width="164" Grid.ColumnSpan="2"/>
        <Label Content="Nhập số :" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="31" Width="70"/>
        <Label Content="Dãy vừa nhập :" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" Height="31" Width="98"/>
        <Label Content="Tổng các phần tử trong dãy :" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="3" VerticalAlignment="Top" Height="31" Width="171"/>
        <Label Content="Tổng các phần tử chẵn :" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="4" VerticalAlignment="Top" Height="31" Width="150"/>
        <Label Content="Tổng các phần tử lẻ :" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="4" VerticalAlignment="Top" Height="31" Width="129"/>
        <Button Content="Tiếp tục" HorizontalAlignment="Left" Margin="215,10,0,0" Grid.Row="5" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Thoát" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="5" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <TextBox x:Name="txt_soLuong" HorizontalAlignment="Left" Height="31" Margin="80,10,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" LostFocus="txt_soLuong_LostFocus"/>
        <TextBlock x:Name="txt_random" HorizontalAlignment="Left" Margin="108,10,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="31" Width="400" Foreground="Black"/>
        <TextBlock x:Name="txt_tongAll" HorizontalAlignment="Left" Margin="181,10,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="31" Width="350"/>
        <TextBlock x:Name="txt_tongChan" HorizontalAlignment="Left" Margin="160,10,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="130"/>
        <TextBlock x:Name="txt_tongLe" Grid.Column="1" HorizontalAlignment="Left" Margin="139,10,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Height="31" Width="143"/>
    </Grid>
</Window>
